{% extends 'base.html.twig' %}

{% block title %}Список пользователей{% endblock %}

{% block body %}
    <div class="row mt-5 mb-2">
        <div class="col">
            <div class="posts-panel-header d-flex align-items-center justify-content-between">
                <h3 class="mb-0">Список пользователей</h3>
                <div class="posts-panel-button">
                    <a class="btn btn-info" href="{{ path('add_new_client') }}">Зарегистрировать нового пользователя</a>
                </div>
            </div>
        </div>
    </div>

    {% for message in app.flashes('info') %}
        <div class="row">
            <div class="col">
                <div class="alert alert-success text-center">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="row ">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Баллы</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Почта</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for single in pagination %}
                    <tr>
                        <td>{{ single.scoring.balls }}</td>
                        <td>{{ single.name }}</td>
                        <td>{{ single.fname }}</td>
                        <td>{{ single.email }}</td>
                        <td>
                            <a href="{{ path('show', {id: single.id}) }}" class=" btn btn-success text-white">Детальный
                                просмотр</a>
                        </td>
                        <td>
                            <a href="{{ path('edit', {id: single.id}) }}" class="btn btn-warning text-dark">Изменить</a>
                        </td>
                        <td>
                            <a href="{{ path('remove', {id: single.id}) }}"
                               class="btn btn-danger text-white">Удалить</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}


